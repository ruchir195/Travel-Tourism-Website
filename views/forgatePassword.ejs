<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/contact.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/bootstrap-social.css">
</head>

<body style="background-color: #e7edf4;">
    <div>
        <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
            <div class="container-fluid">
                <img src="Images/logo.png" alt="" class="mx-3  my-2">
                <a class="navbar-brand" href="index" style="color:orange;">Jouryner</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                </div>
            </div>
        </nav>
    </div>

    <% if(messagesForget.length > 0){ %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert" id="msgShowTime">
            <strong><i class="fa-solid fa-triangle-exclamation fa-xl mx-3" style="color: #940000;"></i></strong>
            <%= messagesForget %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>


        <% if(messagesOtp.length > 0){ %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert" id="msgShowTime">
                <strong><i class="fa-solid fa-triangle-exclamation fa-xl mx-3" style="color: #940000;"></i></strong>
                <%= messagesOtp %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>    


            <script>
                const errorAlert = document.getElementById('msgShowTime');
                if (errorAlert) {
                    setTimeout(function () {
                        errorAlert.style.display = 'none';
                    }, 5000);
                }
            </script>

            <div class="d-flex container my-5 py-3 aligns-items-center justify-content-center mx-auto;">
                <div class="card">
                    <div class="container mt-4 mx-5">
                        <p class="h3 mx-5">Enter Email Address And Get OTP</p>
                    </div>

                    <div class="tab-content container mt-3" id="myTabContent">
                        <div class="tab-pane fade show active mx-5" id="home-tab-pane" role="tabpanel"
                            aria-labelledby="home-tab" tabindex="0">
                            <form onsubmit="return validateEmail();" action="/forgatPassword" method="post">
                                <div class="mb-3 ">
                                    <label for="username" class="form-label mx-0">Email address:*</label>
                                    <input type="text" class="form-control" id="username" name="username" placeholder=""
                                        required>
                                    <div class="mx-2">
                                        <p id="email-error" style="color: red;"></p>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="mt-4">
                                        <input class="btn btn-primary" type="submit" value="Get OTP">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            </div>
            <!-- <script src="../js/errorMsgShow.js"></script> -->
            <script src="../js/loginValidation.js"></script>
</body>

</html>