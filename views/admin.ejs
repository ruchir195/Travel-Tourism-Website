                    <div class="modal-body">
                        <table class="table table-bordered table-hover">
                            <thead style="background-color: cadetblue;">
                                <tr>
                                    <th> User Id</th>
                                    <th> Customer Name </th>
                                    <th> Email Id </th>
                                    <th> Mobile No. </th>
                                    <th> Package Name</th>
                                    <th> City</th>
                                    <th> Adhar Number: </th>
                                    <th> Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% count=1 %>
                                    <% userdata.forEach(function(item){ %>
                                        <tr>
                                            <th>
                                                <%= count++ %>
                                            </th>
                                            <td>
                                                <%= item.firstName %>
                                                    <%= item.lastName %>
                                            </td>
                                            <td>
                                                <%= item.email %>
                                            </td>
                                            <td>
                                                <%= item.phone %>
                                            </td>
                                            <td>
                                                <%= item.pName %>
                                            </td>
                                            <td>
                                                <%= item.city %>
                                            </td>
                                            <td>
                                                <%= item.adharNumber %>
                                            </td>
                                            <td>
