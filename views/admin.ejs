                        <h4 class="modal-title">Front Page Event</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <div class="modal-body">
                        <form action="/adminFrontEvent" method="POST" enctype="multipart/form-data">
