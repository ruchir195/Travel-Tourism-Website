<%- include('../partials/eventHeader') %>

    <body>
        <div>
            <%- include('../partials/navbar') %>
                <!-- <div class="card">
            <img src="../images/4.Winter Event/Goa/g2.jpg" class="card-img-top" alt="..." style="width:100%; height:600px">
        </div> -->
                <div class="container-lg">
                    <div class="img_width">
                        <% /* %>
                        <img src="data:image/<%=placeDetail.img2.contentType%>;base64,
                                        <%=placeDetail.img2.data.toString('base64')%>" class="d-block" alt="..." />
                        <% */ %>                
                                        <% if (placeDetail && placeDetail.img2 && placeDetail.img2.contentType && placeDetail.img2.data) { %>
                                            <img src="data:image/<%= placeDetail.img2.contentType %>;base64, <%= placeDetail.img2.data.toString('base64') %>"
                                                 class="d-block" alt="..." />
                                        <% } else { %>
                                            <!-- You might display a placeholder image or an alternative content here -->
                                        <% } %>                
                    </div>
                </div>

                <div class="container mb-5">
                    <div class="placeImgCont">
                        <div class="mx-5 mt-5 mb-5">
                            <div id="carouselExampleFade" class="carousel slide carousel-fade placeCarouse"
                                data-bs-ride="carousel">
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="data:image/<%=placeDetail.img3.contentType%>;base64,
                                        <%=placeDetail.img3.data.toString('base64')%>" class="d-block w-100" alt="..."
                                            style="height: 450px;">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="data:image/<%=placeDetail.img4.contentType%>;base64,
                                        <%=placeDetail.img4.data.toString('base64')%>" class="d-block w-100" alt="..."
                                            style="height:450px">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="data:image/<%=placeDetail.img5.contentType%>;base64,
                                        <%=placeDetail.img5.data.toString('base64')%>" class="d-block w-100" alt="..."
                                            style="height:450px">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="my-5 mx-5 card">
                            <div class="card-body">
                                <h5 class="card-title"><b>
                                        <%= placeDetail.placeName %>
                                    </b></h5>
                                <p>
                                    <%= placeDetail.placeContent.slice(0,600) %>
                                    <% index = 6 %>
                                            <span class="dots" id="dots<%= index %>">...</span>
                                                                <span class="more" id="more<%= index %>">
                                                                    <%= placeDetail.placeContent.slice(600, placeDetail.placeContent.length) %>
                                                                </span>
                                                                <button onclick="myFunction('<%= index %>');" class="myBtn"
                                                                    id="myBtn<%= index %>">Read  more
                                                                </button>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="booking">
                        <div class="hotel_left mx-5">
                            <h3>
                                <%= placeDetail.greeting %>
                            </h3>
                            <!-- <p>Party hard & enjoy the moments </p> -->
                            <div class="hotel_icon  mb-3">
                                <div class="icon_first"><i class="fa-solid fa-calendar-week"></i>
                                    <div class="detail">
                                        <h4>Duration</h4>
                                        <p>
                                            <%= placeDetail.duration %>
                                        </p>
                                    </div>
                                </div>
                                <div class="icon_second mx-4"><i class="fa-solid fa-people-group"></i>
                                    <div class="detail">
                                        <h4>Age-group</h4>
                                        <p>
                                            <%= placeDetail.age %>
                                        </p>
                                    </div>
                                </div>
                                <div class="icon_third mx-4"><i class="fa-solid fa-clock"></i>
                                    <div class="detail">
                                        <h4>Time</h4>
                                        <p>10:00-7:00</p>
                                    </div>
                                </div>
                            </div>
                            <div class="icon_third hotel_left mb-2">
                                <i class="fa-solid fa-hotel fs-2 mt-2" style="color: #de5824"></i>
                                <div class="detail">
                                    <h4 style="color: black;">
                                        <%= placeDetail.hotelName %>
                                        <% if (placeDetail && placeDetail.hotelRating) { %>
                                        </h4><span><%=  placeDetail.hotelRating %></span>(<%= placeDetail.hotelRating.length %> star)
                                        <% } %>
                                    <p><%= placeDetail.area %></p>
                                </div>
                            </div>

                            <div class="about mt-3">
                                <h3>About Room</h3>
                                <p>All our Rooms are e elegantly furnished with handmade furniture include luxury
                                    en-suite
                                    facilities with complimentary amenities pack, flat screen LCD TV, tea/coffee making
                                    facilities,
                                    fan, hairdryer and the finest pure white linen and towels.</p>
                            </div>
                        </div>

                        <div class="card my-5 mx-5 priceCard" style="width: 23rem;">
                            <div class="card-body">
                                <form action="/hotel" method="post">
                                    <p><i class="fa-solid fa-indian-rupee-sign heading_icon"></i>&nbsp;
                                        <strong class="price">
                                            <%= placeDetail.price %>

                                                <input type="hidden" value="<%= placeDetail.placeName %>" name="pName">
                                                <input type="hidden" value="<%= placeDetail.price %>" name="price"
                                                    style="border: 0px;">
                                                <input type="hidden" value="<%= placeDetail.hotelName %>" name="hName">
                                        </strong>
                                        /Person
                                    </p>
                                    <hr>
                                    <p style="margin-left: 15px;">Service</p>
                                    <div class="ser_icon">

                                        <div class="s1">Dinner</div>
                                        <div class="s2">Medical</div>
                                        <div class="s3">Gym</div>
                                        <div class="s4">Garden</div>
                                        <div class="s5">Parking Area</div>
                                        <div class="s6">Sports Area</div>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn_book">BOOKING</button>
                                    <!-- <a href="../hotel" class="btn btn-primary btn_book">BOOKING</a> -->
                                </form>
                            </div>
                        </div>
                    </div>
                </div>


                <%- include('../partials/footer') %>

        </div>

    </body>

    </html>